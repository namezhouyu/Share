<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp">
  <ImageView android:id="@+id/img_post"
      android:layout_width="120dp"
      android:layout_height="96dp"
  />

  <TextView android:id="@+id/txt_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/img_post"
      android:layout_marginLeft="8dp"
      android:layout_toRightOf="@+id/img_post"
      android:ellipsize="end"
      android:lines="2"
      android:maxLines="2"
      android:textSize="16sp"/>

  <TextView android:id="@+id/txt_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/txt_title"
      android:layout_below="@+id/txt_title"
      android:ellipsize="end"
      android:lines="2"
      android:maxLines="2"
      android:textColor="@color/grey_dark"
      android:textSize="12sp"/>

  <LinearLayout android:id="@+id/ll_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@+id/img_post"
      android:gravity="bottom"
      android:orientation="horizontal">

    <TextView android:id="@+id/txt_browse_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:lines="1"
        android:textColor="@color/grey_dark"
        android:textSize="11sp"
    />

    <TextView android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/grey_dark"
        android:textSize="11sp"
        tools:text="xxx"/>

    <TextView android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="热点"
        android:textColor="@color/red"
        android:textSize="9sp"
    />

  </LinearLayout>

</RelativeLayout>